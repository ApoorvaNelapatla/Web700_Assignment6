                <br>
                <h2>Students <a href="students/add" class="btn btn-primary float-end">Add New Student</a></h2>
                <hr />
                {{#unless students}}
                    <div class="col-md-12 text-center">
                        <strong>No results</strong>
                    </div>
                {{else}}
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th scope="col">Student Num</th>
                                    <th scope="col">Full Name</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Address</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Course ID</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each students}}
                                            <tr>
                                                <td>{{this.studentNum}}</td>
                                                        <td>
                                                        <a href="/student/{{this.studentNum}}">{{this.firstName}} {{this.lastName}}</a>
                                                        </td>
                                                <td><a href="mailto:{{this.email}}">{{this.email}}</a></td>
                                                <td>{{this.addressStreet}}</td>
                                                <td>{{this.status}}</td>
                                                <td>{{this.course}}</td>
                                                <td>
                                                        <a href="/students/delete/{{this.studentNum}}" class="btn btn-danger">Remove</a>
                                                </td>
                                            </tr>
                                {{/each}}
                            </tbody>

                        </table>
                    </div>
                {{/unless}}
            </div>
        </div>
